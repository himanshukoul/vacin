    id: sixth
    name : "sixth"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text:"either check your aadhar card no. or create one"
            font_size: 32
        Button:
            text:"go back"
            font_size:32
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"

<SeventhWindow>:
    id: seventh
    name : "seventh"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: lab1
            text:"you have already registered"
            font_size: 32
        Button:
