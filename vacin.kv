WindowManager:
    FirstWindow:
    SecondWindow:                  #second to fifth child of 1 window
    ThirdWindow:
    FourthWindow:
    FifthWindow:
    SixthWindow:                   #sixth, seventh, eighth child of 2nd window
    SeventhWindow:
    EighthWindow:
        id: eighth
        name: "eighth"
    NinthWindow:
        tiger: eighth.a1
        jaguar: eighth.b1             #binding with eighth window
        lynx: eighth.c1
    TenthWindow:
    AadharWindow:
        id: aadhar
        name: "aadhar"
    Error1Window:
    Error2Window:
    Dose1Window:
        name_vac: dose1string.n1
        type_vac: dose1string.t1
        dose_vac: dose1string.do1
        date_vac: dose1string.da1
        centre_vac: dose1string.c1
    Dose1stringWindow:
        id: dose1string
        name: "dose1string"
    Dose2Window:
        id: dose2
        name: "dose2"
    Dose2stringWindow:
        dose2_vac: dose2.do2
        date2_vac: dose2.da2
        centre2_vac: dose2.c2
    ErrorvacnameWindow:


<FirstWindow>:
    id: first
    name: "first"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text:
                """1 for data input
                2 for accessing data (GOV. officials)
                3 for link to aadhar card creation
                4 to exit"""
            font_size: 16
        TextInput:
            multiline: False
            id: fwi                                    #firstwindowinput
        Button:
            text:"NEXT SCREEN"
            font_size:32
            on_release:

                if fwi.text == "1": app.root.current = "second"
                elif fwi.text =="2": app.root.current = "third"
                elif fwi.text =="3": app.root.current = "fourth"
                elif fwi.text =="4": app.root.current = "fifth"
                root.manager.transition.direction = "left"
                fwi.text =""

<SecondWindow>:
    id: second
    name: "second"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text:"aadhar no"
            font_size: 32
        TextInput:
            multiline: False
            id: swi
        Button:
            text:"go back"
            font_size:32
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"
        Button:
            text:"next"
            font_size:32
            on_release:
                zebra = second.adar(swi.text)
                if zebra == "alpha": app.root.current = "sixth"
                if zebra == "beta": app.root.current = "seventh"
                if zebra == "gamma": app.root.current = "eighth"
                root.manager.transition.direction = "left"
                swi.text =""

<ThirdWindow>:
    id: third
    name : "third"
    GridLayout:
        cols: 2
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text:"username"
            font_size: 32
        TextInput:
            id: login
        Label:
            text:"password"
            font_size: 32
        TextInput:
            id: passw
        Button:
            text: "LOGIN"
            on_release:
                logu=third.do_login_user(login.text)
                logp=third.do_login_pass(passw.text)
                if logu == "loguser" and logp == "logpass": app.root.current = "aadhar"
                if logu == "notuser" and logp == "notpass": app.root.current = "error1"
                root.manager.transition.direction = "left"
                login.text =""
                passw.text =""
        Button:
            text: "BACK"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "left"
<FourthWindow>:
    id: fourth
    name : "fourth"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text:"aadhar card creation {ayush}"
            font_size: 32
        TextInput:
            multiline: False
            id: fowi
        Button:
            text:"go back"
            font_size:32
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"

<FifthWindow>:
    id: fifth
    name : "fifth"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text:"THANK U FOR VISITING"
            font_size: 32
        Button:
            text:"EXIT"
            font_size:32
            on_release:
                fifth.pegasus()

