                root.manager.transition.direction = "right"

<Dose1stringWindow>:
    id: dose1string
    name : "dose1string"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text:
                """What vaccine are you providing to your client?
                1 > covishield
                2 > covaxin"""
            font_size: 32
        TextInput:
            multiline: False
            id: vaccname
        Button:
            text:"Next"
            font_size:32
            on_release:
                v = dose1string.names(vaccname.text)
                root.link()
                if v == 1: app.root.current = "dose1"
                else: app.root.current = "errorvacname"
                root.manager.transition.direction = "left"
                vaccname.text=""

