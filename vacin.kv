    id: dose1
    name : "dose1"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text:"'{}' your vaccine type '{}' dose {} is on '{}' at '{}'".format(root.name_vac,root.type_vac,root.dose_vac,root.date_vac,root.centre_vac)
